{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Toyhouse Extensions",
    "version": "0.4"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "createDir": true,
        "readFile": true,
        "readDir": true,
        "writeFile": true,
        "exists": true,
        "scope": [
          "$APPCONFIG",
          "$APPCONFIG/*",
          "$APPCONFIG/.env"
        ]
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "binaries/main",
            "sidecar": true
          }
        ]
      },
      "process": {
        "relaunch": true
      },
      "dialog": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "th-extensions",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": [
        "binaries/main"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Toyhouse Extensions",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  }
}